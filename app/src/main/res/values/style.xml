<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_15sp_gray">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="BuildProfileTextStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CreateANewTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:translationY">-6.25sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="title_25sp_darkBlue">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="text_20sp_darkBlue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0F2032</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/lightGreen</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="viewParent.headerText.settingsMiniTitle">
        <item name="android:textColor">#5D5C5C</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="settingsText" parent="viewParent.headerText.settingsMiniTitle">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
    </style>
    <style name="viewParent.headerText.settingsTextIcon" parent="settingsText">
        <item name="android:drawableRight">@drawable/ic_more</item>
    </style>

</resources>